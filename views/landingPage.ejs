<%- include('partials/header') %>



    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            line-height: 1.6;
        }

        .hero {
            background: linear-gradient(to right, #e8f5e9, #c8e6c9);
            padding: 100px 20px;
            text-align: center;
        }

        .hero h1 {
            font-size: 3rem;
            color: #2e7d32;
        }

        .section-title {
            color: #388e3c;
            font-weight: 600;
        }

        .img-fluid {
            border-radius: 12px;
        }

        .section {
            padding: 60px 0;
        }

        footer {
            background-color: #2e7d32;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand-lg bg-light shadow-sm"
                style="background: linear-gradient(to right, #e8f5e9, #c8e6c9);">
                <div class=" container-fluid">
                    <a class="navbar-brand fw-semibold" href="/dashboard"> <img src="/logo/green.jpg" style="width: 5%; border-radius: 50%;" alt=""> Bin Saeed Pharmacy & Cosmetics</a>
                    <button class="navbar-toggler p-0 border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarItems" aria-controls="navbarItems" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarItems">


                            <ul class="navbar-nav ms-auto gap-lg-4 gap-2 align-items-center">

                                <% if (!user) { %>
                                    <!-- Not Logged In -->
                                    <li class="nav-item">
                                        <a class="nav-link text-dark fw-semibold text-white" href="/login">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark fw-semibold text-white" href="/register">
                                            <i class="bi bi-person-plus me-1"></i> Register
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <!-- Logged In User -->
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle text-dark fw-semibold text-whitel;"
                                                href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-person-circle me-1"></i>
                                                <%= user.email || 'User' %>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="/logout"><i
                                                            class="bi bi-box-arrow-right me-1"></i> Logout</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <% } %>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1>Effortless Medical & Cosmetic Shop Management</h1>
                <p class="lead mt-3">Streamline your pharmacy and cosmetic inventory, sales, and profit tracking — all
                    in
                    one system.</p>
                <a href="/dashboard" class="btn btn-success btn-lg mt-4">Enter Dashboard</a>
            </div>
        </section>

        <!-- Features Section -->
        <section class="section bg-white">
            <div class="container">
                <h2 class="section-title text-center mb-5">Why Use Our System?</h2>
                <div class="row g-4">
                    <div class="col-md-4 text-center">
                        <img src="https://worktrek.com/wp-content/uploads/2024/10/Top-10-Tips-for-effective-inventory-management-Understanding-Inventory-Control-1536x1106.png"
                            class="img-fluid mb-3 rounded shadow" alt="Medical Inventory">
                        <h5>Inventory Control</h5>
                        <p>Track medicine stock, expiry dates, and cosmetics items with accuracy.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <img src="https://labsoftware.pk/images/pharmacy-software.jpg" class="img-fluid mb-3 shadow"
                            alt="Sales">
                        <h5>Sales Management</h5>
                        <p>Sell faster with auto-complete medicine entries, auto-fill pricing, and discounts.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <img src="https://galla.app/wp-content/uploads/2024/02/Profit-and-Loss-Statement.png"
                            class="img-fluid mb-3 shadow" alt="Profit">
                        <h5>Profit & Loss Insights</h5>
                        <p>Visualize daily and monthly profits, compare cost vs. sale price, and manage growth.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section class="section bg-light">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-4 mb-md-0">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSz0cdITBnL06kAYi33bAU_e-OFvCq9Z3tjlA&s"
                            class="img-fluid" alt="Pharmacy Management System" />
                    </div>
                    <div class="col-md-6">
                        <h2 class="section-title">Built for Busy Stores</h2>
                        <p>From the front counter to backend reports — our management system is tailored for small to
                            mid-sized pharmacies and cosmetic stores. Keep your focus on customers while we handle the
                            numbers.</p>
                        <ul>
                            <li>✔️ Fast billing and sale recording</li>
                            <li>✔️ Expiry alerts</li>
                            <li>✔️ Secure user login and role control</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="section text-center bg-success text-white">
            <div class="container">
                <h2 class="mb-3">Ready to Get Started?</h2>
                <p class="lead">Jump into your dashboard and start managing smarter.</p>
                <a href="/login" class="btn btn-light btn-lg">Login Now</a>
            </div>
        </section>

        <!-- Footer -->
        <footer>
            <div class="container">
                <p style="margin: 0;">&copy; <%= new Date().getFullYear() %> Bin Saeed Pharmacy & Cosmetics. All rights reserved.</p>
                <p style="margin: 0; color: rgb(211, 210, 210);">Application Developed By Ilman. ph: 03499038984</p>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>

    </html>