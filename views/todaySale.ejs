<%- include('partials/header') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body><%- include("partials/navbar") %>

  <div class="container mt-5">
    <h2 class="mb-4 text-center">Sales</h2>
  
    <form action="/profit/today-sales" method="GET" class="mb-4 text-center">
      <input
        type="date"
        name="date"
        class="form-control d-inline-block w-auto me-2"
        required
        min="2025-05-08" 
        value="<%= selectedDateStr %>"
      >
      <button type="submit" class="btn btn-success">View</button>
    </form>
  
    <% if (sales.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Brand</th>
              <th>Formula</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
              <th>Sale Time</th>
            </tr>
          </thead>
          <tbody>
            <% sales.forEach((sale, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= sale.brand %></td>
                <td><%= sale.formula %></td>
                <td>Rs <%= sale.price %></td>
                <td><%= sale.quantity %></td>
                <td>Rs <%= sale.total %></td>
                <td><%= new Date(sale.saleDate).toLocaleTimeString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
  
      <div class="text-end">
        <h4 class="mt-4">Grand Total: Rs <%= grandTotal %></h4>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        No sales recorded for this date.
      </div>
    <% } %>
  
    
  

  <div class="mt-4 text-center">
    <a href="/dashboard" class="btn btn-primary">Back to Dashboard</a>
  </div>
</div>

</body>
</html>
