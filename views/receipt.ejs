<%- include('partials/header') %>
<style>
  body {
    font-family: 'Courier New', Courier, monospace;
    width: 80mm;
    margin: 0 auto;
    padding: 10px;
    background: #fff;
    color: #000;
    font-size: 12px;
  }

  h2, h4, h6 {
    text-align: center;
    margin: 5px 0;
  }

  .line, .dash {
    text-align: center;
    margin: 10px 0;
  }

  .dash::before {
    content: "------------------------------";
    display: block;
  }

  .line::before {
    content: "******************************";
    display: block;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  table th,
  table td {
    text-align: left;
    padding: 2px 0;
  }

  table th:nth-child(1),
  table td:nth-child(1) {
    width: 55%;
  }

  table th:nth-child(2),
  table td:nth-child(2) {
    width: 15%;
    text-align: center;
  }

  table th:nth-child(3),
  table td:nth-child(3) {
    width: 30%;
    text-align: right;
  }

  .totals {
    margin-top: 10px;
    font-weight: bold;
  }

  .thank-you, .developer-detail {
    text-align: center;
    margin-top: 15px;
  }

  @media print {
    .no-print {
      display: none;
    }
  }

  
</style>
<style media="print">
  @page {
  size: 80mm auto; /* Let browser calculate dynamic height */
  margin: 0;
}

  body {
    width: 80mm;
    margin: 0;
    font-size: 12px;
  }

  .no-print {
    display: none; /* Hide unnecessary UI elements */
  }
</style>

<body>
  <h2><strong>Bin Saeed Pharmacy</strong></h2>
  <h6>Address: Qatar Heights  Board Bazar Railway¬†lin</h6>
  <h6>Tel: 03339248298</h6>

  <div class="line"></div>
  <h3 style="text-align:center;">CASH RECEIPT</h3>
  <div class="line"></div>

  <div>
    <div>Date: <%= new Date(sale.createdAt).toLocaleString() %></div>
    <div>Sale ID: <%= sale._id %></div>
    <div>Salesperson: <%= sale.salesperson.name %></div>
  </div>

  <div class="dash"></div>

  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Disc</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% sale.items.forEach(item => { %>
        <tr>
          <td><%= item.brand %> √ó <%= item.quantity %></td>
          <td><%= item.discount %></td>
          <td>Rs.<%= item.total.toFixed(2) %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <div class="dash"></div>

  <table class="totals">
    <tr>
      <td><strong>Total</strong></td>
      <td></td>
      <td><strong>Rs.<%= sale.totalPrice ? sale.totalPrice.toFixed(2) : sale.totalAmount.toFixed(2) %></strong></td>
    </tr>
  </table>

  <div class="line"></div>

  <div class="thank-you">THANK YOU!</div>
  <div class="developer-detail">Application Developed By Ilman And Ahmad<br>Ph: 03499038984 <br> Ph: 03189410553</div>

  <div class="text-center no-print" style="margin-top: 20px;">
    <button class="btn btn-primary mb-2" onclick="window.print()">üñ®Ô∏è Print Receipt</button>
    <a href="/sale-page" class="btn btn-secondary">Back to Dashboard</a>
  </div>

  <script>
    window.onload = () => {
      setTimeout(() => window.print(), 300); // Wait for page to render
    };
  </script>
</body>
