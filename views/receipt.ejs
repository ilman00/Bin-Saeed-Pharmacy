<%- include('partials/header') %>
<style>
  body {
    font-family: 'Courier New', Courier, monospace;
    width: 80mm;
    margin: 0 auto;
    padding: 10px;
    background: #fff;
    color: #000;
    font-size: 12px;
  }

  h2, h4 {
    text-align: center;
    margin: 5px 0;
  }

  .line {
    text-align: center;
    margin: 10px 0;
  }

  .item-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
  }

  .totals {
    margin-top: 10px;
    font-weight: bold;
  }

  .thank-you {
    text-align: center;
    margin-top: 20px;
    font-size: 14px;
  }

  .developer-detail{
    text-align: center;
    margin-top: 5px;
  }

  @media print {
    .no-print {
      display: none;
    }
  }
</style>

<body>
  <h2><strong>Bin Saeed Pharmacy</strong></h2>
  <h6>Address: Your Address Here</h6>
  <h6>Tel: 123456789</h6>

  <div class="line">******************************</div>
  <h3 style="text-align:center;">CASH RECEIPT</h3>
  <div class="line">******************************</div>

  <div>
    <div>Date: <%= new Date(sale.createdAt).toLocaleString() %></div>
    <div>Sale ID: <%= sale._id %></div>
    <div>Salesperson: <%= sale.username %></div>
  </div>

  <div class="line">------------------------------</div>

  <div class="item-row" style="font-weight:bold;">
    <span>Description</span>
    <span>Disc</span>
    <span>Price</span>
  </div>

  <% sale.items.forEach(item => { %>
    <div class="item-row">
      <span><%= item.brand %> * <%= item.quantity%></span>
      <span><%= item.discount %></span>
      <span>Rs.<%= item.total.toFixed(2) %></span>
    </div>
  <% }); %>

  <div class="line">------------------------------</div>

  <div class="item-row totals">
    <span>Total</span>
    <span>Rs.<%= sale.totalPrice ? sale.totalPrice.toFixed(2) : sale.totalAmount.toFixed(2) %></span>
  </div>

  <div class="line">******************************</div>

  <div class="thank-you">THANK YOU!</div>
  <div class="developer-detail">Application Developed By Ilman <br> Ph: 03499038984 </div>

  <div class="text-center no-print" style="margin-top: 20px;">
    <button class="btn btn-primary mb-2" onclick="window.print()">üñ®Ô∏è Print Receipt</button>
    <a href="/sale-page" class="btn btn-secondary">Back to Dashboard</a>
  </div>
</body>
