<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Medicine Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .action-buttons button,
    .action-buttons a {
      margin-right: 5px;
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Bin Saeed Pharmacy & Cosmetics</a>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Medicine Dashboard</h3>
      <a href="/add-product" class="btn btn-success">+ Add Medicine</a>
    </div>

    <!-- Search & Filter -->
    <div class="row mb-3">
      <div class="col-md-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by name, category...">
      </div>
      <div class="col-md-2">
        <button id="filterBtn" class="btn btn-primary w-100">Filter</button>
      </div>
      <div class="col-md-2">
        <button id="sellSelectedBtn" class="btn btn-warning mb-3">Sell Selected</button>
      </div>
    </div>

    <!-- Medicines Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-striped" id="medicineTable">
        <thead class="table-dark">
          <tr>
            <th></th>
            <th>Name</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Expiry</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach( element=> { %>
            <tr>
              <td>
                <input type="checkbox" class="select-medicine" value="<%=element._id%>">
              </td>
              <td>
                <%= element.brand %>
              </td>
              <td>
                <%= element.category %>
              </td>
              <td>
                <%= element.stock %>
              </td>
              <td>
                <%= new Date(element.expiryDate).toLocaleDateString() %>
              </td>
              
              <td>
                <%= element.price %>
              </td>
              <td class="action-buttons">
                <a href="/edit/<%=element._id%>" class="btn btn-sm btn-outline-secondary">Edit</a>
                <button class="btn btn-sm btn-outline-danger">Delete</button>
                <!-- <a href="/sale/<%=element._id%>" class="btn btn-sm btn-outline-warning">Sell</a> -->
              </td>
            </tr>
            <%}) %>

              <!-- More rows dynamically added -->
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const filterBtn = document.getElementById('filterBtn');
    const tableRows = document.querySelectorAll('#medicineTable tbody tr');
    const noResultsMessage = document.createElement('div');
    noResultsMessage.className = 'alert alert-warning d-none';
    noResultsMessage.textContent = 'No medicines found matching your search.';
    document.querySelector('.table-responsive').prepend(noResultsMessage);

    // Function to filter table rows
    function filterTable() {
      const query = searchInput.value.trim().toLowerCase();
      let hasResults = false;

      tableRows.forEach(row => {
        const name = row.cells[1].textContent.toLowerCase();
        const category = row.cells[2].textContent.toLowerCase();

        // Check if query matches name or category
        if (name.includes(query) || category.includes(query)) {
          row.style.display = '';
          hasResults = true;
        } else {
          row.style.display = 'none';
        }
      });

      // Show/hide no results message
      noResultsMessage.classList.toggle('d-none', hasResults);
    }

    // Event listeners for search input
    searchInput.addEventListener('input', filterTable); // Trigger on any input change
    searchInput.addEventListener('paste', filterTable); // Handle paste events

    // Filter button click
    filterBtn.addEventListener('click', filterTable);
  </script>
  <script>
    document.getElementById('sellSelectedBtn').addEventListener('click', () => {
      const selectedCheckboxes = document.querySelectorAll('.select-medicine:checked');
      const selectedIds = Array.from(selectedCheckboxes).map(cb => cb.value);

      if (selectedIds.length === 0) {
        alert("Please select at least one product to sell.");
        return;
      }

      // Redirect to sale page with selected medicine IDs
      const url = `/sale?ids=${selectedIds.join(',')}`;
      window.location.href = url;
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>